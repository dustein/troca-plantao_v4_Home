generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @map("_id") @db.ObjectId
  email     String   @unique
  nome      String
  matricula Int
  Oferta    Oferta[]
}

model Oferta {
  id        String   @id @default(uuid()) @map("_id") @db.ObjectId
  data      DateTime
  turno     Boolean
  propos    User     @relation(fields: [proposId], references: [id])
  proposId  String   @db.ObjectId
  aceitouId String
}
