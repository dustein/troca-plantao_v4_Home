generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  ref       String   @default(uuid())
  email     String   @unique
  nome      String
  matricula Int      @unique
  Oferta    Job[]
}

model Job {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  ref       String   @default(uuid())
  dia       String
  turno     Boolean
  propos    User     @relation(fields: [proposId], references: [id])
  proposId  String   @db.ObjectId
  aceitouId String
}
